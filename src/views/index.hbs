<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Epic Viewer</title>
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="/style.css">

<body>
  <div class="epicSelector">
    <label>Select the Epic to view</label>
    <input id="epicDropdown" list="epics" onchange="onEpicSelected()" />
    <datalist id="epics">
      {{#each epics}}
        <option value={{id}}>{{name}}</option>
      {{/each}}
    </datalist>

    <button id="epicNavButton" class="btn btn-primary" onclick="openEpic()" disabled="true">Go!</button>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

<script>
  function onEpicSelected() {
    const epicId = document.getElementById('epicDropdown').value;
    document.getElementById('epicNavButton').disabled = !epicId;
  }

  function openEpic() {
    const epicId = document.getElementById('epicDropdown').value;
    location.href = `/epics/${epicId}`;
  }
</script>

</html>
